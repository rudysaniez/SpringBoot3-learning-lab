{
    "openapi": "3.0.2",
    "info": {
        "title": "pro-ability-api",
        "version": "1.0",
        "description": "This API manage the roles for the users.",
        "contact": {
            "name": "Rudy SANIEZ",
            "url": "https://github.com/adeo/pro-replenishment-ability-api",
            "email": "rudy.saniez@adeo.com"
        }
    },
    "servers": [
        {
            "url": "https://pro-replenishment-ability-api-aftyhz-qa.manawa-euw1-gke1.priv.manawa.adeo.cloud/api/v1",
            "description": "QA-ITBM"
        }
    ],
    "paths": {
        "/abilities/{ldap}": {
            "summary": "Find an ability by the ldap.",
            "description": "This endpoint allows to serve an ability by the ldap.",
            "get": {
                "tags": [
                    "ability-controller"
                ],
                "responses": {
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Ability"
                                }
                            }
                        },
                        "description": "OK"
                    }
                },
                "operationId": "getByLdap",
                "summary": "This operation returns an ability by the ldap.",
                "description": "This operation returns an ability by the ldap."
            },
            "parameters": [
                {
                    "name": "ldap",
                    "description": "The ldap.",
                    "schema": {
                        "type": "string"
                    },
                    "in": "path",
                    "required": true
                }
            ]
        },
        "/abilities": {
            "summary": "The abilities creation.",
            "description": "The main operation is a creation operation. Indeed the POST operation allows the ability creation.",
            "post": {
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Ability"
                            }
                        }
                    },
                    "required": true
                },
                "tags": [
                    "ability-controller"
                ],
                "responses": {
                    "201": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Ability"
                                }
                            }
                        },
                        "description": "CREATED"
                    },
                    "200": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Ability"
                                }
                            }
                        },
                        "description": "OK after an update."
                    },
                    "422": {
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/HttpErrorInfo"
                                }
                            }
                        },
                        "description": "UNPROCESSABLE ENTITY"
                    }
                },
                "operationId": "save",
                "summary": "Ability creation operation.",
                "description": "This operation allows the ability creation."
            }
        }
    },
    "components": {
        "schemas": {
            "Ability": {
                "title": "Root Type for Ability",
                "description": "The user abilities.",
                "required": [
                    "businessCategoryCode",
                    "global",
                    "ldap",
                    "roles"
                ],
                "type": "object",
                "properties": {
                    "ldap": {
                        "description": "The user ldap.",
                        "type": "string"
                    },
                    "roles": {
                        "description": "The user roles.",
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "businessCategoryCode": {
                        "description": "The business category code :\n- 411\n- 101\n- 500",
                        "type": "string"
                    },
                    "global": {
                        "description": "User global :\n- 411\n- 1124\n\nThe global user can access all entities.",
                        "type": "boolean"
                    },
                    "localRulesList": {
                        "description": "List of local rules.",
                        "type": "array",
                        "items": {
                            "$ref": "#/components/schemas/LocalRules"
                        }
                    }
                },
                "example": {
                    "ldap": "20014077",
                    "global": true,
                    "businessCategoryCode": "411",
                    "roles": [
                        "GO-LM-ROLE-PRO-REPLENISHMENT-SCG-WRITE",
                        "GO-LM-ROLE-PRO-REPLENISHMENT-SCG-APPLICATIONMANAGER"
                    ]
                }
            },
            "HttpErrorInfo": {
                "title": "Root Type for HttpErrorInfo",
                "description": "Information returned when an error occurs.",
                "type": "object",
                "properties": {
                    "timestamp": {
                        "format": "date-time",
                        "description": "Temporal information.",
                        "type": "string"
                    },
                    "path": {
                        "description": "The path of the resource using.",
                        "type": "string"
                    },
                    "httpStatus": {
                        "description": "Http status.",
                        "type": "string"
                    },
                    "message": {
                        "description": "The reason for the error.",
                        "type": "string"
                    }
                },
                "example": {
                    "timestamp": "2021-01-21T10:19:40.266Z",
                    "path": "/abilities/4058621",
                    "httpStatus": "NOT_FOUND",
                    "message": "The ability=4058621 doesn't not exists."
                }
            },
            "LocalRules": {
                "title": "Root Type for LocalRules",
                "description": "Local rules for local applications (POP for example)",
                "required": [
                    "applicationSource",
                    "applicationTarget",
                    "role"
                ],
                "type": "object",
                "properties": {
                    "applicationSource": {
                        "description": "Application source.",
                        "type": "string"
                    },
                    "applicationTarget": {
                        "description": "Application target.",
                        "type": "string"
                    },
                    "role": {
                        "description": "The role :\n- READ\n- WRITE",
                        "type": "string"
                    }
                },
                "example": {
                    "applicationSource": "POP",
                    "applicationTarget": "SRC",
                    "role": "READ"
                }
            }
        },
        "securitySchemes": {
            "OIDC": {
                "openIdConnectUrl": "https://idpb2e-rec.adeo.com",
                "type": "openIdConnect",
                "description": "The OpenID Connect allows the JWTs."
            }
        }
    }
}